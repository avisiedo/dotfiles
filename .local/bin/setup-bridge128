#!/bin/bash

if [ $(id -u) -ne 0 ]; then
  run0 $0 "$@"
fi

nmcli con show bridge-bridge128 &>/dev/null || {
  nmcli con add type bridge ifname bridge128
  nmcli con add type bridge-slave ifname eth128 master bridge141 
  nmcli con up bridge-bridge128
  nmcli con up bridge-slave-eth128
}

nmcli device modify bridge128 \
  ipv4.addresses 192.168.144.1/17 \
  ipv4.method manual \
  ipv4.ignore-auto-dns yes \
  ipv4.ignore-auto-routes yes \
  autoconnect yes &>/dev/null

