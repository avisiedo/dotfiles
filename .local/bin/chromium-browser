#!/bin/bash
all_proxy="${all_proxy:-${HTTPS_proxy}}"
all_proxy="${all_proxy:-${https_proxy}}"
all_proxy="${all_proxy:-${http_proxy}}"
all_proxy="${all_proxy:-${HTTP_proxy}}"

if [ "${all_proxy}" != "" ]; then
    echo exec /usr/bin/chromium-browser "--proxy-server=${all_proxy}" "$@"
    exec nohup /usr/bin/chromium-browser "--proxy-server=${all_proxy}" "$@" &>/dev/null &
else
    exec nohup /usr/bin/chromium-browser "$@" &>/dev/null &
fi

