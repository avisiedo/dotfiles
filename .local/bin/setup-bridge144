#!/bin/bash

if [ $(id -u) -ne 0 ]; then
  run0 $0 "$@"
fi

nmcli con show bridge-bridge144 &>/dev/null || {
  nmcli con add type bridge ifname bridge144
  nmcli con add type bridge-slave ifname eth144 master bridge141 
  nmcli con up bridge-bridge144
  nmcli con up bridge-slave-eth144
}

nmcli device modify bridge144 \
  ipv4.addresses 192.168.144.1/24 \
  ipv4.method manual \
  ipv4.ignore-auto-dns yes \
  ipv4.ignore-auto-routes yes \
  autoconnect yes &>/dev/null

